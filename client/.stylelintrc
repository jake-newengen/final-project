{
  "extends": "stylelint-config-recommended",
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "extends",
        "tailwind",
        "variants",
        "apply",
        "responsive"
      ]
    }],
    "block-no-empty": null,
    "unit-whitelist": ["px", "em", "rem", "s", "%", "ms", "deg"]
  }
}